{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("spicyisti\\spicer\\assetbundles\\spicer\\SpicerAsset") %}
{% do view.registerAssetBundle("spicyisti\\spicer\\assetbundles\\spicercpsection\\SpicerCPSectionAsset") %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "https://github.com/Istiak/spicer/blob/master/README.md" %}

{# The title of this CP section #}
{% set title = "Spicer" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('spicer') %}

{# Get a URL to an image in our AssetBundle #}
{% set iconUrl = view.getAssetManager().getPublishedUrl('@spicyisti/spicer/assetbundles/spicercpsection/dist', true) ~ '/img/Spicer-icon.svg' %}

{# Content that should appear in the page header#}
{% set extraPageHeaderHtml %}
    <div class="buttons">
        <a href="{{ pluginCpUrl }}" class="btn submit add icon">{{ "Click Me!"|t('spicer') }}</a>
    </div>
{% endset %}

{# The content of the CP Section#}
{% set content %}
    <h2>{{ "Spicer CP Section body goes here"|t('spicer') }}</h2>
    <img src="{{ iconUrl }}" height="64" width="64" />
    <p class="textline"></p>
{% endset %}
